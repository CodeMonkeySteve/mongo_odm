source 'http://rubygems.org'

gem 'activesupport'
gem 'activemodel'
gem 'mongo'
gem 'bson_ext'
gem 'tzinfo'

group :development do
  gem 'database_cleaner'
  gem 'guard-rspec'
  gem 'jeweler'
  gem 'rcov'
  gem 'rspec'
  gem 'yard'
  gem 'watchr'

  if RUBY_VERSION =~ /1.9/
    gem 'ruby-debug19', :require => 'ruby-debug'
  else
    gem 'ruby-debug'
  end
end
